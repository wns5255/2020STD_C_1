#include <iostream>
using namespace std;

int BinarySearch(int* a, const int x, const int left, const int right)
{
	cout << "x : " << x << "를 탐색합니다. left : "<<left<<", right : "<<right<<"\n";
	if (left <= right) {
		int middle = (left + right) / 2;
		cout << "middle : " << middle<<"\n";

		if (x < a[middle - 1])
		{
			cout << x << " < " << a[middle - 1] << " 이므로 함수를 재호출합니다. 재 호출 시 right 값은 " << middle - 1 << "\n\n";
			return BinarySearch(a, x, left, middle - 1);
		}
		else if (x > a[middle - 1])
		{
			cout << x << " > " << a[middle - 1] << " 이므로 함수를 재호출합니다. 재 호출 시 left 값은 " << middle + 1 << "\n\n";
			return BinarySearch(a, x, middle + 1, right);
		}
		return middle;
	}
	return -1;
}

int main(void)
{
	int i;
	int arr[10] = { 0 };
		
	for (i = 1; i < 11; i++)
	{
		arr[i-1] = i;
		cout << arr[i-1] << " ";
	}

	cout << "\n\n\n";

	cout<<BinarySearch(arr, 7, arr[0], arr[9]);

	return 0;
}
